{
  "name": "mihaitmf/emag-product-checker",
  "description": "Check if Emag product is in stock and below a price, and send push notification",
  "keywords": ["emag-product-checker", "checker", "notifier", "mihaitmf"],
  "homepage": "https://github.com/mihaitmf/emag-product-checker",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Mihai Tmf",
      "email": "mihai.tmf@gmail.com",
      "homepage": "https://github.com/mihaitmf",
      "role": "Owner"
    }
  ],
  "config": {
    "vendor-dir": "vendor"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/mihaitmf/notifier.git"
    }
  ],
  "require": {
    "php" : "^7.4",
    "ext-dom": "*",
    "php-di/php-di": "^6",
    "doctrine/annotations": "^1",
    "guzzlehttp/guzzle": "^7",
    "mihaitmf/notifier": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "ProductChecker\\": ["src/"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ProductChecker\\Tests\\": "test/"
    }
  }
}
